# ============================================================================ #
#  .env.example - Template for environment variables
#
#  Copy this to ../.env and fill in your values:
#    cp repo/.env.example ../.env
#
# ============================================================================ #

# 42 School API
API_ROOT="https://api.intra.42.fr"

# OAuth client values from your 42 app (https://profile.intra.42.fr/oauth/applications)
CLIENT_ID="your-client-id-here"
CLIENT_SECRET="your-client-secret-here"
CLIENT_SECRET_NEXT="your-next-secret-here"
REDIRECT_URI="http://localhost:9000/callback"
SCOPE="public"

# OAuth tokens (obtained via auth code flow)
# ACCESS_TOKEN can be blank; REFRESH_TOKEN is required for auto-refresh
ACCESS_TOKEN=""
REFRESH_TOKEN=""

# Database
DB_HOST="db"
DB_PORT=5432
DB_NAME="api42"
DB_USER="api42"
DB_PASSWORD="changeMe!"

# Web port (change if 9000 is already in use)
WEB_PORT=9000
